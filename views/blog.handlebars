
{{!-- display blog info even no signin --}}

<div class="text-center delete-form">
  <h2>{{title}}</h2>
  <p>{{{get_emoji}}}</p>
  <div class="form-group">
      
      <textarea class="form-input" id="blog-text" title="blog-text">{{blog_text}}</textarea>
  </div>
 
  <strong>Posted by {{user.name}} on {{format_date date_created}}</strong>
  {{!-- only display when signin  --}}
  {{#if logged_in}}
  <div class="col-md-4 ">
    {{!-- data-id="{{blog.id}}" is wrong? --}}
    <button class="btn btn-sm btn-danger delete-btn" data-id="{{id}}">DELETE</button>
  </div>
  <div class="col-md-4">
    <button class="btn btn-sm btn-success update-btn" data-id="{{id}}">UPDATE</button>
  </div>
</div>
{{!-- comment form  --}}
<div>
  <form class="form new-comment-form">
    <div class="form-group">
      <label for="comment-text">comment on this article:</label>
      <textarea class="form-input" id="comment-text" title="comment-text"></textarea>
    </div>
    <div class="form-group">
      <button type="submit" class="btn btn-primary">Post Comment</button>
    </div>
  </form>
</div>
{{/if}}



  <div class="col-md-6 comment-list">
    <h5>Comments</h5>
 

    {{!-- {{#each blog.comments as |comment|}} --}}
      <div class="row mb-2">
        <div class="col-md-8">
          <div class="meta">
            {{user.name}}
            on
            {{#each comments}}
            {{format_date date_created}}
          </div>
          <p class="comment">{{comment_text}}</p>
            {{/each}}
        </div>
      </div>
    {{!-- {{/each}} --}}
  </div>


{{#if logged_in}}

<script src="/js/dashboard.js"></script>
{{/if}}
