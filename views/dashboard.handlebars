<div class="row">
  <div class="col-auto">
    <h2>Welcome, {{name}}!</h2>
  </div>
</div>

<div class="row mt-4">
  <div class="col-md-6">
    <h3>Create a New Blog:</h3>

    <form class="form new-project-form">
      <div class="form-group">
        <label for="blog-title">blog title:</label>
        <input
          class="form-input"
          type="text"
          id="blog-title"
          name="blog-title"
        />
      </div>

      <div class="form-group">
        <label for="blog-content">blog content:</label>
        <textarea
          class="form-input"
          id="blog-content"
          name="blog-content"
        ></textarea>
      </div>
      <div class="form-group">
        <button type="submit" class="btn btn-primary">Create</button>
      </div>
    </form>
  </div>

  {{#if blogs.length}}
    <div class="col-md-6">
      <h3>Current Blogs:</h3>

      {{#each blogs as |blog|}}
        <div class="row mb-2">
          <div class="col-md-8">
            <h4><a href="/editblog/{{blog.id}}">{{blog.title}}</a></h4>
            <p>{{blog.blog_text}}</p>

            <p>created on {{format_date blog.date_created}}</p>
          </div>

        </div>
      {{/each}}
    </div>
  {{/if}}
</div>

<script src="/js/createblog.js"></script>