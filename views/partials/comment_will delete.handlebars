{{#if comments.length}}
  <div class="col-md-6 comment-list">
    <h5>Comments</h5>

    {{#each comments as |comment|}}
      <div class="row mb-2">
        <div class="col-md-8">
          <div class="meta">
            {{user.name}}
            on
            {{format_date date_created}}
          </div>
          <p class="comment">{{comment.comment_text}}</p>
        </div>
      </div>
    {{/each}}
  </div>
{{/if}}