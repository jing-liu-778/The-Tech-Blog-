<!-- Loop over each object in the projects array -->
{{#each blogs as |blog|}}
  <div class="row mb-4 project">
    <div class="col-md-5">
      <h2>
        <!-- Call helper function with triple brackets to render the emoji span as HTML -->
        {{{get_emoji}}}
        {{!-- {{#if logged_in}}
          <a href="/view/{{blog.id}}">{{blog.title}}</a>
        {{else}} --}}
        <a href="/blog/{{blog.id}}">{{blog.title}}</a>
        {{!-- {{/if}} --}}
      </h2>
      <p>
        {{blog.blog_text}}
      </p>
      <strong>Posted by
        {{blog.user.name}}
        on
        {{format_date blog.date_created}}</strong>
    </div>
    <div class="col-md-7">
      <p>
        {{project.description}}
      </p>
    </div>
  </div>
{{/each}}